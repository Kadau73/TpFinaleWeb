@model TpFinal.Models.InscrireParticipant

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
    <meta name="viewport" content="width=device-width" />
    <link href="~/css/monStyle.css" rel="stylesheet" />
    <title>Formulaire</title>
</head>
<body>
    <div class="panel panel-success">
        <div class="panel-heading text-center">
            <h4>Inscription</h4>
        </div>
        <div class="panel-body">
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary()
                <div class="form-group">
                    <label>Votre prénom :</label>
                    @Html.TextBoxFor(i => i.Prenom, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Votre nom :</label>
                    @Html.TextBoxFor(i => i.Nom, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Votre courriel :</label>
                    @Html.TextBoxFor(i => i.Email, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Date :</label>
                    @Html.TextBoxFor(i => i.DateInscription, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Votre affiliation :</label>
                    @Html.TextBoxFor(i => i.Affiliation, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Montant :</label>
                    @Html.TextBoxFor(i => i.Montant, new { @class = "form-control" })
                </div>
                <div class="text-center">
                    <input class="btn btn-success" type="submit" value="Go" />
                </div>
            }
        </div>
    </div>
</body>
</html>
